@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using KennysCuts.Model
@inject ProtectedSessionStorage ProtectedSessionStore




<div class="container py-4">
    <!-- Flex container to display cards horizontally across the page -->
    <div class="d-flex flex-row flex-wrap gap-4">
        <!-- Repeat this block for each service -->
        <div class="card bg-white shadow-lg rounded-3 border-0" style="flex: 1 1 300px;">
            <div class="card-body p-4">
                <!-- Title of the service -->
                <h5 class="card-title text-center text-dark mb-3">@Services.Name</h5>

                <!-- Description of the service -->
                <p class="card-text text-muted text-center">@Services.Description</p>

                <!-- Button to show details -->
                <div class="d-flex justify-content-center mt-4">
                    <button type="button" class="btn btn-outline-dark px-4 py-2 rounded-pill fw-bold shadow-sm"
                            data-bs-toggle="collapse"
                            data-bs-target="#details-@Services.Id"
                            aria-expanded="false"
                            aria-controls="details-@Services.Id">
                        <i class="bi bi-info-circle me-2"></i> Show Details
                    </button>
                </div>

                <!-- Collapsible section for price and duration -->
                <div class="collapse mt-3" id="details-@Services.Id">
                    <div class="card bg-light rounded-3 border-0 p-3">
                        <p class="mb-2"><strong>Duration:</strong> @Services.Duration minutes</p>
                        <p><strong>Price:</strong> £@Services.Price</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- End of single service card -->
    </div>
</div>








@code {

    [Parameter]
    public Services Services { get; set; }
    private int quantity = 1;

}