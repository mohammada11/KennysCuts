@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using KennysCuts.Model
@inject ProtectedSessionStorage ProtectedSessionStore


<div class="row-md-4 mb-4">
    <div class="card mt-2 h-100 shadow-sm border-0">
        <div class="card-header bg-dark text-white">
            <h5 class="card-title mb-0">@Services.Name</h5>
        </div>
        <div class="card-body d-flex flex-column justify-content-between">
            <p class="card-text text-muted">@Services.Description</p>
            <div class="d-flex justify-content-between align-items-center mt-4">
                <span class="badge bg-dark p-2">Duration: @Services.Duration minutes</span>
                <span class="badge bg-dark p-2">Price: £@Services.Price</span>
            </div>
        </div>
    </div>
</div>



@code {

    [Parameter]
    public Services Services { get; set; }
    private int quantity = 1;

}